{
  "settings": {
    "index": {
      "number_of_replicas": 2,
      "auto_expand_replicas": "1-3",
      "index.search.slowlog.threshold.query.warn": "2s",
      "index.search.slowlog.threshold.query.info": "1s",
      "index.search.slowlog.threshold.query.debug": "500ms",
      "index.search.slowlog.threshold.query.trace": "200ms"
    },
    "analysis": {
      "analyzer": {
        "pt_br_analyzer": {
          "tokenizer": "standard",
          "filter": [
            "lowercase",
            "stemmer_plural_portugues",
            "asciifolding"
          ]
        }
      },
      "filter": {
        "stemmer_plural_portugues": {
          "type": "stemmer",
          "name": "minimal_portuguese"
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "id": { "type": "keyword" },
      "createdAt": { "type": "date" },
      "updatedAt": { "type": "date" },
      "active": { "type": "boolean" },
      "name": {
        "type": "text",
        "analyzer": "pt_br_analyzer",
        "fields": {
          "keyword": {
            "type": "keyword"
          }
        }
      },
      "description": { "enabled": false },
      "keywords": { "type": "text" },
      "brand": {
        "type": "object",
        "properties": {
          "id": { "type": "keyword" },
          "name": {
            "type": "text",
            "fields": {
              "keyword": {
                "type": "keyword"
              }
            }
          }
        }
      },
      "categoriesIds": { "type": "keyword" },
      "categories": {
        "type": "object",
        "properties": {
          "id": { "type": "keyword", "index": false, "copy_to": "categoriesIds" },
          "name": { "type": "keyword", "index": false },
          "level": { "type": "integer", "index": false }
        }
      },
      "segmentsIds": { "type": "keyword" },
      "segments": {
        "type": "object",
        "properties": {
          "id": { "type": "keyword", "copy_to": "segmentsIds", "index": false },
          "name": { "type": "keyword", "index": false },
          "slug": { "type": "keyword", "index": false }
        }
      },
      "characteristics": { "enabled": false },
      "technicalSpecifications": { "enabled": false },
      "skusIds": { "type": "keyword" },
      "skusCodes": { "type": "keyword" },
      "skusEans": { "type": "keyword" },
      "skusIdentifiers": { "type": "keyword" },
      "skus": {
        "type": "object",
        "properties": {
          "id": {
            "type": "keyword",
            "index": false,
            "copy_to": "skusIds"
          },
          "updatedAt": { "type": "date", "index": false },
          "active": { "type": "boolean", "index": false },
          "code": {
            "type": "keyword",
            "index": false,
            "copy_to": ["skusCodes", "skusIdentifiers"]
          },
          "ean": {
            "type": "keyword",
            "index": false,
            "copy_to": ["skusEans", "skusIdentifiers"]
          },
          "mainSku": { "type": "boolean", "index": false },
          "pricing": {
            "type": "object",
            "enabled": false,
            "properties": {
              "updatedAt": { "type": "date" },
              "priceFrom": { "type": "double" },
              "salePrice": { "type": "double" }
            }
          },
          "attributes": {
            "type": "object",
            "enabled": false,
            "properties": {
              "updateAt": { "type": "date" },
              "color": { "type": "keyword", "index": false, "copy_to": "skusAttributesValues" },
              "size": { "type": "keyword", "index": false, "copy_to": "skusAttributesValues" },
              "model": { "type": "keyword", "index": false, "copy_to": "skusAttributesValues" },
              "voltage": { "type": "keyword", "index": false, "copy_to": "skusAttributesValues" },
              "specifications": {
                "type": "object",
                "properties": {
                  "key": { "type": "keyword" },
                  "value": { "type": "keyword" },
                  "type": { "type": "keyword" },
                  "unit": { "type": "keyword" },
                  "filterable": { "type": "boolean" },
                  "displayOrder": { "type": "integer" }
                }
              }
            }
          },
          "images": {
            "type": "object",
            "enabled": false,
            "properties": {
              "small": { "type": "keyword" },
              "medium": { "type": "keyword" },
              "large": { "type": "keyword" },
              "zoom": { "type": "keyword" },
              "order": { "type": "integer" },
              "main": { "type": "boolean" }
            }
          }
        }
      }
    }
  }
}
