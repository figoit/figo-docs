{
  "settings": {
    "analysis": {
      "analyzer": {
        "pt_br_analyzer": {
          "tokenizer": "standard",
          "filter": [
            "lowercase",
            "stemmer_plural_portugues",
            "asciifolding"
          ]
        }
      },
      "filter": {
        "stemmer_plural_portugues": {
          "type": "stemmer",
          "name": "minimal_portuguese"
        }
      }
    }
  },
  "mappings": {
    "dynamic": "strict",
    "properties": {
      "createdAt": { "type": "date" },
      "updatedAt": { "type": "date" },
      "active": { "type": "boolean" },
      "productId": { "type": "keyword" },
      "skuCode": { "type": "keyword", "index": false },
      "name": {
        "type": "text",
        "analyzer": "pt_br_analyzer",
        "fields": {
          "keyword": {
            "type": "keyword"
          }
        }
      },
      "keywords": { "type": "text" },
      "brand": {
        "type": "object",
        "properties": {
          "id": { "type": "keyword" },
          "name": {
            "type": "text",
            "fields": {
              "keyword": {
                "type": "keyword"
              }
            }
          }
        }
      },
      "categoriesIds": {
        "type": "keyword"
      },
      "categories": {
        "type": "object",
        "properties": {
          "id": { "type": "keyword", "index": false, "copy_to": "categoriesIds" },
          "name": { "type": "keyword", "index": false },
          "level": { "type": "integer", "index": false }
        }
      },
      "segmentsIds": { "type": "keyword" },
      "segments": {
        "type": "object",
        "properties": {
          "id": { "type": "keyword", "index": false, "copy_to": "segmentsIds" },
          "name": { "type": "keyword", "index": false },
          "slug": { "type": "keyword", "index": false }
        }
      },
      "pricing": {
        "type": "object",
        "properties": {
          "updatedAt": { "type": "date", "index": false },
          "priceFrom": { "type": "double", "index": false },
          "salePrice": { "type": "double" }
        }
      },
      "priceRange": { "type": "keyword" },
      "images": {
        "type": "object",
        "enabled": false,
        "properties": {
          "small": { "type": "keyword" },
          "medium": { "type": "keyword" },
          "large": { "type": "keyword" }
        }
      },
      "skusIds": { "type": "keyword" },
      "skusCodes": { "type": "keyword" },
      "skusEans": { "type": "keyword" },
      "skusIdentifiers": { "type": "keyword" },
      "skusAttributesValues": {
        "type": "text",
        "analyzer": "pt_br_analyzer",
        "fields": {
          "keyword": {
            "type": "keyword"
          }
        }
      },
      "skus": {
        "type": "object",
        "properties": {
          "id": {
            "type": "keyword",
            "index": false,
            "copy_to": "skusIds"
          },
          "updatedAt": { "type": "date", "index": false },
          "active": { "type": "boolean", "index": false },
          "code": {
            "type": "keyword",
            "index": false,
            "copy_to": ["skusCodes", "skusIdentifiers"]
          },
          "ean": {
            "type": "keyword",
            "index": false,
            "copy_to": ["skusEans", "skusIdentifiers"]
          },
          "pricing": {
            "type": "object",
            "enabled": false,
            "properties": {
              "updatedAt": { "type": "date" },
              "priceFrom": { "type": "double" },
              "salePrice": { "type": "double" }
            }
          },
          "attributes": {
            "type": "object",
            "properties": {
              "color": { "type": "keyword", "index": false, "copy_to": "skusAttributesValues" },
              "size": { "type": "keyword", "index": false, "copy_to": "skusAttributesValues" },
              "model": { "type": "keyword", "index": false, "copy_to": "skusAttributesValues" },
              "voltage": { "type": "keyword", "index": false, "copy_to": "skusAttributesValues" },
              "specifications": {
                "type": "object",
                "properties": {
                  "key": { "type": "keyword", "index": false },
                  "value": { "type": "keyword", "index": false, "copy_to": "skusAttributesValues" },
                  "type": { "type": "keyword", "index": false },
                  "unit": { "type": "keyword", "index": false },
                  "displayOrder": { "type": "integer", "index": false }
                }
              }
            }
          }
        }
      }
    }
  }
}
